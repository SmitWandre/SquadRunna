# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DJANGO_DEBUG=0
ALLOWED_HOSTS=.vercel.app,.now.sh,yourdomain.com

# Database Configuration (PostgreSQL)
# For Vercel, use a managed PostgreSQL service like Vercel Postgres, Supabase, or Neon
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Configuration
# Add your frontend URLs (comma-separated)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Redis/Celery Configuration
# For Vercel, use a managed Redis service like Upstash or Redis Cloud
REDIS_URL=redis://default:password@host:port

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# JWT Configuration (optional overrides)
# ACCESS_TOKEN_LIFETIME_MINUTES=30
# REFRESH_TOKEN_LIFETIME_DAYS=7
